<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <h1>Book Destination</h1>
        <h2 class="mb-4"><div id="atsym">@</div> <%= destination %> <div id="price">for &#8377;<%= price %> per day</div></h2>
        <form method="POST" action="/booking" novalidate class="needs-validation" id="bookingForm">
            <input type="hidden" name="listingId" value="<%= listingId %>">
            <div class="mb-3">
                <label class="form-label">Number of persons</label>
                <input name="no_of_persons" placeholder="max 4 per booking" min="1" max="4" type="number" required autocomplete="off" class="form-control pernum">
                <div class="invalid-feedback">Please enter a number between 1 and 4</div>
            </div>
            <div id="date">
                <div class="mb-3">
                    <label class="form-label">From</label>
                    <input type="date" name="from_date" required class="form-control" id="fromDate">
                </div>
                <div class="mb-3">
                    <label class="form-label">To</label>
                    <input type="date" name="to_date" required class="form-control" id="toDate">
                </div>
            </div>
            <button class="btn btn-primary book">Book</button>
        </form>
    </div>
    </div>
</body>
